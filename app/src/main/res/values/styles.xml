<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">32dp</item>
    </style>

    <style name="HorizontalLine" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:background">#F3912D</item>
    </style>

    <style name="Icon" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">24dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">#F3912D</item>
    </style>

</resources>
